<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CCPAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:background="@drawable/bordered_layout">
        <ImageView
            android:layout_width="222dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/ccp_logo_w_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Bienvenus sur la Platforme de E-Paiment de Algerie Poste"
            android:textSize="24sp"
            android:textColor="@color/ccp_blue"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:background="@drawable/bordered_layout">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:text="Informations du Paiement:"
            android:textSize="20sp"
            android:textColor="@color/ccp_blue"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="Commande n°:"
                    android:textColor="@color/ccp_blue"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="Montant:"
                    android:textSize="20sp"
                    android:textColor="@color/ccp_blue"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/numero_commande_ccp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="085259914128"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/ccp_blue"/>
                <TextView
                    android:id="@+id/montant_ccp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="4399 DZD"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/ccp_blue"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:background="@drawable/bordered_layout">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:text="Informations Client:"
            android:textSize="20sp"
            android:textColor="@color/ccp_blue"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Numéro de Carte EDAHABIA*:"
                    android:textSize="18sp"
                    android:textColor="@color/ccp_blue"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Date d'Expiration:"
                    android:textSize="18sp"
                    android:textColor="@color/ccp_blue"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Nom et Prénom:"
                    android:textSize="18sp"
                    android:textColor="@color/ccp_blue"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Clé CVV2:*"
                    android:textSize="18sp"
                    android:textColor="@color/ccp_blue"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/ccp_blue"
                    android:hint="0000-0000-0000-0000"/>
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp">
                    <Spinner
                        android:id="@+id/spinnermonth"
                        android:layout_width="75dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/months" />
                    <Spinner
                        android:id="@+id/spinnerday"
                        android:layout_width="66dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/days"/>
                </LinearLayout>
                <EditText
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:hint="XXXXX XXXXXXXX"
                    android:textSize="18sp"
                    android:textColor="@color/ccp_blue"/>
                <EditText
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:hint="xxxx"
                    android:textSize="18sp"
                    android:textColor="@color/ccp_blue"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ccp_valider"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ccp_butt"
            android:text="Valider"
            android:textColor="@color/ccp_blue"/>
        <Button
            android:id="@+id/ccp_reinit"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ccp_butt"
            android:text="Réinitialiser"
            android:textColor="@color/ccp_blue"/>
        <Button
            android:id="@+id/ccp_annuler"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@drawable/ccp_butt"
            android:text="Annuler"
            android:textColor="@color/ccp_blue"/>

    </LinearLayout>
</LinearLayout>